    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    
    <persistence-unit name="inheritance1" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <properties>
    <property name="javax.persistence.jdbc.url" value="{{enter your DB url for inheritance1}}"/>
    <property name="javax.persistence.jdbc.user" value="{{enter your DB user for inheritance1}"/>
    <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
    <property name="javax.persistence.jdbc.password" value="{{enter your DB password for inheritance1}"/>
    <!-- additional properties -->
    <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
    <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
	<property name="hibernate.show_sql" value="true"/>
	<property name="hibernate.format_sql" value="true"/>
    </properties>
    </persistence-unit>

